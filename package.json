    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@types/wavesurfer.js": "^6.0.12",
    "babel-loader": "^10.0.0",
    "buffer": "^6.0.3",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^13.0.0",
    "crypto-browserify": "^3.12.1",
    "css-loader": "^6.10.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.4",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "util": "^0.12.5",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
