    "react-dom": "^18.2.0",
    "react-resizable-panels": "^2.0.11",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.super-watarec.app",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.video"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
